#!/bin/bash
#SBATCH --job-name="hello_mpi"
#SBATCH --output="hello_mpi-%j.out"
#SBATCH --partition=trial
#SBATCH --nodes=2
#SBATCH --ntasks-per-node=4
#SBATCH --cpus-per-task=1
#SBATCH --mem-per-cpu=5000M
#SBATCH --account=RFST
#SBATCH --export=ALL
#SBATCH -t 00:05:00

module load intel

echo "Starting Hello with 8 MPI processes" 
mpirun -n 8 ./hello_mpi.exe
wait
echo ""
